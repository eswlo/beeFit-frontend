<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hexa_background"
    tools:context=".activities.fragments.RewardsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Rewards Text -->
        <TextView
            android:id="@+id/rewardsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rewards"
            android:textSize="35sp"
            android:textStyle="bold"
            android:textColor="#000000"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingTop="150dp"
            android:layout_marginRight="150dp"
            />

        <!-- Coupons row -->
        <LinearLayout
            android:id="@+id/couponTable"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            app:layout_constraintTop_toBottomOf="@id/rewardsText"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <!-- Coupon Text -->
            <LinearLayout
                android:id="@+id/arcCouponRow"
                android:layout_width="match_parent"
                android:layout_height="102dp"
                android:orientation="horizontal"
                android:background="@drawable/coupon_roundcorner">

                <ImageButton
                    android:id="@+id/arcImageButton"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_width="92dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/arc_image_button_description"
                    android:src="@drawable/arcteryx" />

                <LinearLayout
                    android:id="@+id/arcCouponTermTable"
                    android:layout_width="203dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/arcCouponText"
                        android:layout_width="190dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="25dp"
                        android:text="Get 10% off your next purchase of $100 or more*"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@id/arcImageButton"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/arcCouponTermTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:text="*Terms and conditions apply"
                        android:textSize="13sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/arcCouponProgressBarTable"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <ProgressBar
                        android:id="@+id/arcCouponProgressBar"
                        style="?android:attr/progressBarStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/arcCouponProgressTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="10sp"
                        android:text="# points away!" />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <!-- Add more content here -->

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
