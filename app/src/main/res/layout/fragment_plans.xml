<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hexa_background"
    tools:context=".activities.fragments.PlansFragment">
    
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/planRecyclerView"
        android:layout_above="@id/btmLayout"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/instruction_PlanRecyclerView"
        android:layout_centerInParent="true"
        android:text="Need some inspirations\nfor your exercise plan?\n\nAsk here!"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="28dp"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:padding="10dp"
        android:id="@+id/btmLayout">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/enterMsgEditText"
            android:layout_centerInParent="true"
            android:padding="16dp"
            android:hint="Enter text here"
            android:layout_toLeftOf="@id/sendBtn"
            android:background="@drawable/entermsg_rounded_corner"
            />
        <ImageButton
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/sendBtn"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="10dp"
            android:src="@drawable/baseline_send_24"
            android:background="?attr/selectableItemBackgroundBorderless"
            />






        
    </RelativeLayout>

</RelativeLayout>