<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/g12"
    tools:context=".activities.SignupActivity">

    <!-- Bike image -->
    <ImageView
        android:id="@+id/bikeImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bike"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginStart="200dp"
        android:layout_marginEnd="50dp"/>

    <!-- Login Text -->
    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login Details"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/bikeImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/bikeImageView"
        android:paddingTop="0dp"
        android:paddingRight="150dp"/>


    <!-- Username EditText -->
    <EditText
        android:id="@+id/usernameLoginEditText"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="Username"
        android:textColor="#000000"
        android:textColorHint="#808080"
        app:layout_constraintTop_toBottomOf="@id/welcomeText"
        app:layout_constraintStart_toStartOf="@id/welcomeText"
        app:layout_constraintEnd_toEndOf="@id/welcomeText"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"/>

    <!-- Password EditText -->
    <EditText
        android:id="@+id/passwordLoginEditText"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="Password"
        android:textColor="#000000"
        android:textColorHint="#808080"
        app:layout_constraintTop_toBottomOf="@id/usernameLoginEditText"
        app:layout_constraintStart_toStartOf="@id/welcomeText"
        app:layout_constraintEnd_toEndOf="@id/welcomeText"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"/>

    <!-- Forgot Password Text -->
        <TextView
            android:id="@+id/forgotpwText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="forgot passward?"
            android:textColor="#808080"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/passwordLoginEditText"
            app:layout_constraintStart_toStartOf="@id/welcomeText"
            android:layout_marginTop="5dp"
            android:paddingLeft="170dp"/>



    <!-- Login Button -->
    <Button
        android:id="@+id/loginButton"
        android:layout_width="300dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@id/forgotpwText"
        app:layout_constraintStart_toStartOf="@id/passwordLoginEditText"
        app:layout_constraintEnd_toEndOf="@id/passwordLoginEditText"
        android:text="Login"
        android:textColor="#fff"
        android:textSize="27sp"
        app:backgroundTint="#f2a000"
        android:background="@drawable/button_register"
        android:layout_marginTop="16dp"/>

    <ImageView
        android:id="@+id/image6ImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/image6"
        app:layout_constraintTop_toTopOf="@id/loginButton"
        app:layout_constraintStart_toStartOf="@id/loginButton"
        app:layout_constraintEnd_toEndOf="@id/loginButton"
        android:layout_marginTop="80dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"/>


    <TextView
        android:id="@+id/greetingBeefit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="beeFit"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="@id/image6ImageView"
        app:layout_constraintStart_toStartOf="@id/image6ImageView"
        app:layout_constraintEnd_toEndOf="@id/image6ImageView"
        android:layout_marginTop="50dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="10dp"/>





</androidx.constraintlayout.widget.ConstraintLayout>