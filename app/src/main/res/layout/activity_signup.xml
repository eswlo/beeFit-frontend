<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/g12"
    tools:context=".activities.SignupActivity">

    <!-- Greeting Text -->
    <TextView
        android:id="@+id/loginText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to beeFit!"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingTop="110dp"
        android:paddingRight="150dp"/>

    <TextView
        android:id="@+id/greetingText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="let's create an account!"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/loginText"
        app:layout_constraintStart_toStartOf="@id/loginText"
        app:layout_constraintEnd_toEndOf="@id/loginText"
        android:layout_marginTop="10dp"
        android:paddingRight="150dp"/>


    <!-- First Name EditText -->
    <EditText
        android:id="@+id/firstNameEditText"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:hint="First Name"
        app:layout_constraintTop_toBottomOf="@id/greetingText2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/lastNameEditText"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="0dp"/>

    <!-- Last Name EditText -->
    <EditText
        android:id="@+id/lastNameEditText"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:hint="Last Name"
        app:layout_constraintTop_toBottomOf="@id/greetingText2"
        app:layout_constraintStart_toEndOf="@id/firstNameEditText"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="25dp"
        android:layout_marginStart="8dp"/>

    <!-- Phone EditText -->
    <EditText
        android:id="@+id/phoneEditText"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="Phone"
        app:layout_constraintTop_toBottomOf="@id/firstNameEditText"
        app:layout_constraintStart_toStartOf="@id/firstNameEditText"
        app:layout_constraintEnd_toEndOf="@id/lastNameEditText"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"/>

    <!-- Email EditText -->
    <EditText
        android:id="@+id/emailEditText"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="Email"
        app:layout_constraintTop_toBottomOf="@id/phoneEditText"
        app:layout_constraintStart_toStartOf="@id/firstNameEditText"
        app:layout_constraintEnd_toEndOf="@id/lastNameEditText"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"/>

    <!-- Username EditText -->
    <EditText
        android:id="@+id/usernameEditText"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="Username"
        app:layout_constraintTop_toBottomOf="@id/emailEditText"
        app:layout_constraintStart_toStartOf="@id/firstNameEditText"
        app:layout_constraintEnd_toEndOf="@id/lastNameEditText"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"/>

    <!-- Password EditText -->
    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="Password"
        app:layout_constraintTop_toBottomOf="@id/usernameEditText"
        app:layout_constraintStart_toStartOf="@id/firstNameEditText"
        app:layout_constraintEnd_toEndOf="@id/lastNameEditText"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"/>

    <!-- Register Button -->
    <Button
        android:id="@+id/registerButton"
        android:layout_width="300dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@id/passwordEditText"
        app:layout_constraintStart_toStartOf="@id/passwordEditText"
        app:layout_constraintEnd_toEndOf="@id/passwordEditText"
        android:text="Get started"
        android:textColor="#fff"
        android:textSize="27sp"
        app:backgroundTint="#f2a000"
        android:background="@drawable/button_register"
        android:layout_marginTop="16dp"/>

    <ImageView
        android:id="@+id/bikeImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/image6"
        app:layout_constraintTop_toTopOf="@id/registerButton"
        app:layout_constraintBottom_toBottomOf="@id/registerButton"
        app:layout_constraintStart_toStartOf="@id/registerButton"
        app:layout_constraintEnd_toEndOf="@id/registerButton"
        android:layout_marginTop="250dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"/>


    <TextView
        android:id="@+id/greetingBeefit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="beeFit"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/bikeImageView"
        app:layout_constraintStart_toStartOf="@id/bikeImageView"
        app:layout_constraintEnd_toEndOf="@id/bikeImageView"
        android:layout_marginTop="50dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="10dp"/>





</androidx.constraintlayout.widget.ConstraintLayout>